<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	
	<key>nodeAttributes</key>
	<dict>
		<key>categories</key>
		<array>
			<string>Utility/Numeric</string>
		</array>
		<key>name</key>
		<string>Smooth</string>
		<key>aliasNames</key>
		<array>
			<string>Linger</string>
		</array>
		<key>description</key>
		<string>This patch smoothes a numerical value over time using a specific interpolation curve over a given duration.</string>
        <key>examples</key>
        <array>
            <string>Smooth Continuous Position.qtz</string>
			<string>Mouse Scroll Reset.qtz</string>
			<string>Iterator Selection List.qtz</string>
        </array>  
    </dict>
	
	<key>inputAttributes</key>
	<dict>
		<key>inputValue</key>
		<dict>
			<key>description</key>
			<string>The value to smooth.</string>
			<key>name</key>
			<string>Value</string>
		</dict>
		<key>inputIncreasingDuration</key>
		<dict>
			<key>description</key>
			<string>The interpolation duration in seconds when the value is increasing.</string>
			<key>name</key>
			<string>Increasing Duration</string>
		</dict>
		<key>inputIncreasingInterpolation</key>
		<dict>
			<key>description</key>
			<string>The interpolation curve when the value is increasing.</string>
			<key>name</key>
			<string>Increasing Interpolation</string>
		</dict>
		<key>inputDecreasingDuration</key>
		<dict>
			<key>description</key>
			<string>The interpolation duration in seconds when the value is decreasing.</string>
			<key>name</key>
			<string>Decreasing Duration</string>
		</dict>
		<key>inputDecreasingInterpolation</key>
		<dict>
			<key>description</key>
			<string>The interpolation curve when the value is decreasing.</string>
			<key>name</key>
			<string>Decreasing Interpolation</string>
		</dict>
	</dict>
	
	<key>outputAttributes</key>
	<dict>
		<key>outputValue</key>
		<dict>
			<key>description</key>
			<string>The smoothed value.</string>
			<key>name</key>
			<string>Smoothed Value</string>
		</dict>
	</dict>
	
</dict>
</plist>
